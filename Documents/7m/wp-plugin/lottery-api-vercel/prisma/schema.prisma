generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LotteryRound {
  id           Int              @id @default(autoincrement())
  round_date   DateTime         @unique
  name         String
  results      LotteryResult[]
}

model PrizeType {
  id           Int              @id @default(autoincrement())
  code         String           @unique
  name         String
  amount       Int
  digits       Int
  results      LotteryResult[]
}

model LotteryResult {
  id           Int              @id @default(autoincrement())
  numbers      Json
  prizeTypeId  Int
  prizeType    PrizeType        @relation(fields: [prizeTypeId], references: [id])
  roundId      Int
  round        LotteryRound     @relation(fields: [roundId], references: [id])
}