generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
}

enum Role {
  SYSTEM
  ADMIN
  MANAGER
  ASSISTANCE_MANAGER
  STAFF
}

model Domain {
  id          Int         @id @default(autoincrement())
  url         String
  webType     String
  group       String
  host        String
  domain      String
  cloudflare  String
  status      String
  active      Boolean
  vpsDetail   String?
  wpActive    Boolean     @default(false)
  wpDetails   wpDetails?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model wpDetails {
  id          Int      @id @default(autoincrement())
  url         String
  wp_user     String
  wp_password String
  domain      Domain   @relation(fields: [domainId], references: [id])
  domainId    Int      @unique
}
